@model IndexViewModel

@{
    ViewBag.Title = "Bulgarian mountains";
}

@{
    var trips = Model.Trips;
    var firstTrip = trips.Any() ? trips[0] : null;
    var secondTrip = trips.Count > 1 ? trips[1] : null;
    var thirdTrip = trips.Count > 2 ? trips[2] : null;
}

@if (!trips.Any())
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <img src="~/images/mou.jpg"  />
    </div>    
}

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">        
        @if (firstTrip != null)
        {
            <div class="carousel-item active">
              <img height="700" src="@firstTrip.ImageUrl" class="d-block w-100" alt="@firstTrip.Name">
              <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" 
                    asp-controller="Trips" 
                    asp-action="Details" 
                    asp-route-id="@firstTrip.Id" 
                    asp-route-info="@(firstTrip.Name + ", " + firstTrip.Duration + ", " + firstTrip.Length)">@firstTrip.Name</a></h5>                
              </div>
            </div>
        }
        @if (secondTrip != null)
        {
            <div class="carousel-item">
              <img height="700" src="@secondTrip.ImageUrl" class="d-block w-100" alt="@secondTrip.Name">
              <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" 
                    asp-controller="Trips" 
                    asp-action="Details" 
                    asp-route-id="@secondTrip.Id" 
                    asp-route-info="@(secondTrip.Name + ", " + secondTrip.Duration + ", " + secondTrip.Length)">@secondTrip.Name</a></h5>                 
              </div>
            </div>
        }
        @if (thirdTrip != null)
        {
            <div class="carousel-item">
              <img height="700" src="@thirdTrip.ImageUrl" class="d-block w-100" alt="@thirdTrip.Name">
              <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" 
                    asp-controller="Trips" 
                    asp-action="Details" 
                    asp-route-id="@thirdTrip.Id" 
                    asp-route-info="@(thirdTrip.Name + ", " + thirdTrip.Duration + ", " + thirdTrip.Length)">@thirdTrip.Name</a></h5>                
              </div>
            </div>
        }            
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div class="mt-4 p-5 bg-primary text-white rounded">
    <div class="row">
        <h3 class="col-md-4 text-center">
            @Model.TotalTrips Trips
        </h3>
        <h3 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h3>
        <h3 class="col-md-4 text-center">
            @Model.TotalBookings Bookings
        </h3>
    </div>
</div>
